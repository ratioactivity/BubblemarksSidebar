{
  "name": "bubblemarks-sidebar",
  "version": "1.0.0",
  "description": "Standalone Bubblemarks desktop experience for the Zenbook Pro Duo second screen.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.bubblemarks.sidebar",
    "productName": "Bubblemarks Sidebar",
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "BubblemarksSidebar-Setup-${version}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    }
  },
  "devDependencies": {
    "electron": "^28.2.3",
    "electron-builder": "^24.13.3"
  }
}
